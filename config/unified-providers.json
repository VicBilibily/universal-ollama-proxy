{
  // 统一配置文件 - 支持所有AI提供商的配置
  // 调试注释：用于测试JSON注释支持功能
  // 更新时间：2025年6月5日 - 添加注释支持
  "providers": [
    {
      // 火山方舟引擎配置 - 字节跳动旗下AI服务
      "name": "volcengine",
      "displayName": "火山方舟引擎",
      "baseURL": "https://ark.cn-beijing.volces.com/api/v3",
      "apiKey": "${VOLCENGINE_API_KEY}", // 从环境变量读取API密钥
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      // 阿里云百炼平台配置
      "name": "dashscope",
      "displayName": "阿里云百炼",
      "baseURL": "https://dashscope.aliyuncs.com/compatible-mode/v1",
      "apiKey": "${DASHSCOPE_API_KEY}", // 阿里云API密钥
      "headers": {
        "Content-Type": "application/json",
        "X-DashScope-SSE": "enable"
      }
    },
    {
      // 深度求索AI配置
      "name": "deepseek",
      "displayName": "DeepSeek官方",
      "baseURL": "https://api.deepseek.com/v1",
      "apiKey": "${DEEPSEEK_API_KEY}", // DeepSeek API密钥
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      // 腾讯云DeepSeek配置
      "name": "tencentds",
      "displayName": "腾讯云DeepSeek",
      "baseURL": "https://api.lkeap.cloud.tencent.com/v1",
      "apiKey": "${TENCENTDS_API_KEY}", // 腾讯云API密钥
      "headers": {
        "Content-Type": "application/json"
      }
    }
  ],
  "meta": {
    "version": "1.0.0",
    "lastUpdated": "2025-06-03",
    "description": "AI服务供应商配置文件"
  }
}
